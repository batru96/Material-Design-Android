<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/nav_width"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context="com.example.batru.materialdesign.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FB8C00">

        <ImageView
            android:layout_width="@dimen/nav_width"
            android:layout_height="@dimen/image_height"
            android:layout_marginBottom="@dimen/fragment_margin_bottom"
            android:layout_marginTop="@dimen/fragment_margin_top"
            android:src="@drawable/ic_abstract" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listMeo"
        android:layout_below="@id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>

